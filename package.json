    "deploy": "gh-pages -d build"   // Deploys the built files to gh-pages
  },
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^5.10.9",
    "dotenv": "^10.0.0",
    "cors": "^2.8.5",
    "body-parser": "^1.19.0"
  },
  "devDependencies": {
    "typescript": "^4.4.4",
    "ts-node-dev": "^1.1.8",
    "gh-pages": "^3.2.3"  // Added gh-pages to deploy to GitHub Pages
  },
