{
  "homepage": "https://jjmmharmon.github.io/Celestial-Insights/"
  "name": "celestial-insights",
  "version": "1.0.0",
  "description": "A zodiac sign application with Node.js and MongoDB",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc",  // Builds the TypeScript code
